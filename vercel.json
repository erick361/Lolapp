{
  "version": 2,
  "builds": [
    { "src": "public/index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },      // API requests
    { "src": "/(.*)", "dest": "/public/$1" }       // Archivos est√°ticos y index.html
  ]
}
